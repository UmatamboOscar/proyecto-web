        <br>
        <form action="/usuario/crearUsuario" method="POST">
            <table>
                <tr>
                    <td><label for="nombreID">Nombre:    </label></td>
                    <td><input id="nombreID" type="text" name="nombre" value=""></td>
                </tr>
                <tr>
                    <td><label for="apellidoID">Apellido:    </label></td>
                    <td><input id="apellidoID" type="text" name="apellido" value=""></td>
                </tr>
                <tr>
