<%- include('../estilos/estilos-generales')%>
<%- include('../componentes/cabecera')%>
<%- include('../componentes/nav-bar')%>

<div class="row" style="margin-left: 30px">
    <div id="divPadre">
        <div id="divHijo">
            <a href="/categoria/crear?usuario=<%=usuario%>&rol=<%=roles[0]%>">
                <button type="submit"> Crear Categoria</button>
            </a>
        </div>
        <div class="centerTable">
            <row>
            <table>
                <tr>
                    <th>NOMBRE</th>
                </tr>
                <% categorias.forEach( (objeto)=>{ %>
                    <tr>
                        <td><%= objeto.nombre%></td>
                        <td style="width:500px">
                            <div class="row">
                            <div class="col-lg-4">
                            <a href="/categoria/editar/<%=objeto.id%>?usuario=<%=usuario%>&rol=<%=roles[0]%>">
                                <button>EDITAR</button>
                            </a></div>
                            <div class="col-lg-4">
                            <form action="/categoria/eliminar/<%= objeto.id%>?usuario=<%=usuario%>&rol=<%=roles[0]%>"
                                  method="POST">
                                <button type="submit">ELIMINAR</button>
                            </form>
                            </div>
                            </div>
                        </td>
                    </tr>
                <% } ) %>
            </table>
            </row>
        </div>
        <a href="/libro/administracion?usuario=<%=usuario%>&rol=<%=roles[0]%>">
            <button type="button">IR A MENU ADMINISTRADOR</button>
        </a>

    </div>
</div>
<br/>

    <div class="col-sm-12"><%- include('../componentes/pie-de-pantalla')%></div>