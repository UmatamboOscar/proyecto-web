<%- include('../componentes/nav-bar')%>
<div class="row" style="margin-left: 30px">
    <div id="divPadre">
        <div id="divHijo">
            <% if ( typeof error !== 'undefined') {%>
            <p> ERROR <%=error%></p>
            <%}%>
        </div>
        <div id="divHijo" class="centerTable">
            <form action=""
                  method="POST">
                <table>
                    <tr>
                        <td><label for="ISBNID">ISBN:    </label></td>
                        <td><input id="ISBNID" type="text" name="areaTotal" value=""></td>
                    </tr>
                    <tr>
                        <td><label for="tituloID">TÃ­tulo:    </label></td>
                        <td><input id="tituloID" type="text" name="numeroCuartos" value=""></td>
                    </tr>
                    <tr>
                        <td><label for="stockID">Stock:  </label></td>
                        <td><input id="stockID" type="text" name="numeroPiso" value=""></td>
                    </tr>
                    <tr>
                        <td><label for="preciolID">Precio:  </label></td>
                        <td><input id="preciolID" type="text" name="precio" value=""></td>
                    </tr>
                    <tr>
                        <td><label for="imagenID">imagen:    </label></td>
                        <td><input id="imagenID" type="text" name="ubicacion" value=""></td>
                        <td>Porfavor ingresar el link a la imagen del libro</td>
                    </tr>
                    <tr>
                        <td><label for="autorID">autores:    </label></td>
                        <td style="text-align: left">
                            <% autores.forEach( (objeto)=>{%>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                    <%=objeto.nombre%>
                                </label>
                            </div>
                            <% } )%>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="autorID">categorias:    </label></td>
                        <td style="text-align: left">
                            <% categorias.forEach( (objeto)=>{%>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck">
                                <label class="form-check-label" for="defaultCheck">
                                    <%=objeto.nombre%>
                                </label>
                            </div>
                            <% } )%>
                        </td>
                    </tr>
                </table>
                <div id="divHijo">
                    <br>
                    <button type="submit">CREAR</button>
                    <button type="reset">RESETEAR</button>
                </div>
            </form>
        </div>
    </div>
</div>
