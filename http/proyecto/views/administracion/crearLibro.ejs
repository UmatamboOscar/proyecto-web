<%- include('../estilos/estilos-generales')%>
<%- include('../componentes/cabecera')%>
<%- include('../componentes/nav-bar')%>
<div class="row" style="margin-left: 30px">
    <div id="divPadre">
        <div id="divHijo">
            <% if ( typeof error !== 'undefined') {%>
            <p> ERROR <%=error%></p>
            <%}%>
        </div>
        <div id="divHijo">
            <form action="/libros" method="get">
                <button>REGRESAR</button>
            </form>
        </div>
        <div id="divHijo" class="centerTable">
            <form action=""
                  method="POST">
                <table>
                    <tr>
                        <td><label for="ISBNID">ISBN:    </label></td>
                        <td><input id="ISBNID" type="text" name="areaTotal" value=""></td>
                    </tr>
                    <tr>
                        <td><label for="tituloID">Título:    </label></td>
                        <td><input id="tituloID" type="text" name="numeroCuartos" value=""></td>
                    </tr>
                    <tr>
                        <td><label for="stockID">Stock:  </label></td>
                        <td><input id="stockID" type="text" name="numeroPiso" value=""></td>
                    </tr>
                    <tr>
                        <td><label for="preciolID">Precio:  </label></td>
                        <td><input id="preciolID" type="text" name="precio" value=""></td>
                    </tr>
                    <tr>
                        <td><label for="imagenID">imagen:    </label></td>
                        <td><input id="imagenID" type="text" name="ubicacion" value=""></td>
                        <td>Porfavor ingresar el link a la imagen del libro</td>
                    </tr>
                    <tr>
                        <td><label for="autorID">autore:    </label></td>
                        <td style="text-align: left">
                            <select class="form-control">
                            <% autores.forEach( (objeto)=>{%>
                                    <option><%=objeto.nombre%></option>
                            <% } )%>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="autorID">categoria:    </label></td>
                        <td style="text-align: left">
                            <select class="form-control">
                                <% categorias.forEach( (objeto)=>{%>
                                <option><%=objeto.nombre%></option>
                                <% } )%>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="descripciónID">descripción:    </label></td>
                        <td><textarea name="descripción" id="descripciónID" cols="30" rows="10"></textarea></td>
                    </tr>
                </table>
                <div id="divHijo">
                    <br>
                    <button type="submit">CREAR</button>
                    <button type="reset">RESETEAR</button>
                </div>
            </form>
        </div>
    </div>
</div>
<br/>

<div class="col-sm-12"><%- include('../componentes/pie-de-pantalla')%></div>